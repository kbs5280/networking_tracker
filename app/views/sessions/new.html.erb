<div class="container">
  <h1>Log in</h1>

  <%= form_for :session, url: login_path do |f| %>
  <%= f.text_field :username, placeholder: 'Username' %><br>
  <%= f.password_field :password, placeholder: 'Password' %><br>
  <%= f.submit 'Login', class: "btn btn-primary btn-sm login" %>
  <% end %>
</div>
